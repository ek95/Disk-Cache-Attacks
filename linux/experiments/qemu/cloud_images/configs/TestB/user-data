#cloud-config
hostname: TestB
manage_etc_hosts: true
users:
  - name: vmadm
    ssh-authorized-keys:
      - ssh-rsa  erik.kraft5@gmx.at
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    home: /home/vmadm
    shell: /bin/bash
    lock_passwd: false
runcmd:
  - echo "AllowUsers vmadm" >> /etc/ssh/sshd_config
  - restart ssh
disable_root: false
chpasswd:
  list: |
    vmadm:vmadm
  expire: false
